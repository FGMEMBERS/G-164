<?xml version="1.0"?>

<PropertyList>

  <particlesystem>
    <name>dust</name>
    <type>normal</type>

    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>

    <texture>smoke.png</texture>

    <emissive type="bool">false</emissive>
    <lighting type="bool">true</lighting>

    <condition>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>-90</theta-min-deg>
      <theta-max-deg>90</theta-max-deg>
      <phi-min-deg>-90</phi-min-deg>
      <phi-max-deg>90</phi-max-deg>
      <speed-mps>
        <value>20</value>
        <spread>20</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>40</x-min-deg-sec>
        <y-min-deg-sec>40</y-min-deg-sec>
        <z-min-deg-sec>40</z-min-deg-sec>
        <x-max-deg-sec>40</x-max-deg-sec>
        <y-max-deg-sec>40</y-max-deg-sec>
        <z-max-deg-sec>40</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>velocities/uBody-fps</property>
        <factor>0.2</factor>
        <offset>0.02</offset>
        <spread>30</spread>
      </particles-per-sec>
    </counter>

    <particle>
      <start>
        <color>
          <red><value>   0.50 </value></red>
          <green><value> 0.40 </value></green>
          <blue><value>  0.30 </value></blue>
          <alpha><value> 0.45 </value></alpha>
        </color>
        <size>
          <value>0.1</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.50 </value></red>
          <green><value> 0.40 </value></green>
          <blue><value>  0.30 </value></blue>
          <alpha><value> 0.0 </value></alpha>
        </color>
        <size>
          <value>0.8</value>
        </size>
      </end>

      <life-sec>
        <value>0.6</value>
      </life-sec>

      <mass-kg>  0.02 </mass-kg>
      <radius-m> 0.5 </radius-m>
    </particle>

    <program>
      <fluid>               air  </fluid>
      <gravity type="bool"> false </gravity>
      <wind typ="bool">     false </wind>
    </program>

  </particlesystem>

</PropertyList>

